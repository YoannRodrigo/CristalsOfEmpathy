  dialogues:
  - profilePnj: {fileID: 0}
    emotion: 0
    isAnswerNeeded: 0
    nextTextId: 1
    sentence: "H\xE9ros, oui c'est \xE0 vous que je m'adresse ! Je suis le gardien
